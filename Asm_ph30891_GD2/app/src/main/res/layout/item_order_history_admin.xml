<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginVertical="5dp"
    android:background="@drawable/khung_product"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/khung_product"
            />
        <TextView
            android:id="@+id/tvNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:layout_toRightOf="@id/imgProduct"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp"
            />
        <TextView
            android:id="@+id/Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Price"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/imgProduct"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_margin="5dp">
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:background="#ddd"
            android:layout_marginBottom="5dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tvTotalQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="0 kg"
            android:textSize="16sp"
            android:layout_below="@id/line1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Total :"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/line1"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="1000 vnd"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@id/line1"
            android:layout_alignParentEnd="true"/>
        <View
            android:id="@+id/line2"
            android:layout_below="@id/tvTotalQuantity"
            android:layout_width="match_parent"
            android:background="#ddd"
            android:layout_marginVertical="5dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tvTrangThaiOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/line2"
            android:text="Trang thai don hang"
            android:textColor="#F44336"
            android:textSize="16sp" />
        <View
            android:id="@+id/line3"
            android:layout_below="@id/tvTrangThaiOrder"
            android:layout_width="match_parent"
            android:background="#ddd"
            android:layout_marginVertical="5dp"
            android:layout_height="1dp"/>
        <View
            android:id="@+id/line4"
            android:layout_below="@id/tvTrangThaiOrder"
            android:layout_width="match_parent"
            android:background="#ddd"
            android:layout_marginVertical="5dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/tenKh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Name :"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_below="@id/line4"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tvTenKh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trần Hoàng Long"
            android:textSize="15sp"
            android:layout_below="@id/line4"
            android:layout_toRightOf="@id/tenKh"/>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Phone :"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:layout_below="@id/tenKh"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="086907082222"
            android:layout_marginTop="7dp"
            android:textSize="15sp"
            android:layout_below="@id/tenKh"
            android:layout_toRightOf="@id/tenKh"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="#FD693A"
            app:cardCornerRadius="5dp"
            android:layout_below="@id/tvTenKh">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#fff"
                android:src="@drawable/ic_phone"/>
        </androidx.cardview.widget.CardView>
        <View
            android:id="@+id/line5"
            android:layout_below="@id/phone"
            android:layout_width="match_parent"
            android:background="#ddd"
            android:layout_marginVertical="5dp"
            android:layout_height="1dp"/>
        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line5"
            android:layout_alignParentStart="true"
            />
        <TextView
            android:id="@+id/diachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Address :"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_below="@id/line5"
            android:layout_toRightOf="@id/location"/>
        <TextView
            android:id="@+id/tvDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nhà số 9, ngách 103/19, đường Phương Canh, Nam Từ Liêm, Hà Nội"
            android:textSize="15sp"
            android:layout_below="@id/line5"
            android:layout_toRightOf="@id/diachi"/>
        <View
            android:id="@+id/line6"
            android:layout_below="@id/tvDiaChi"
            android:layout_width="match_parent"
            android:background="#ddd"
            android:layout_marginVertical="5dp"
            android:layout_height="1dp"/>
    </RelativeLayout>
</LinearLayout>