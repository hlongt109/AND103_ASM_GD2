<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/khung_product"
        android:padding="5dp"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/imgProduct"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/image"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/khung_product"/>
        <TextView
            android:id="@+id/tvNameProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name fruit"
            android:layout_toRightOf="@id/imgProduct"
            android:layout_alignParentTop="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />
        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 kg"
            android:layout_below="@id/tvNameProduct"
            android:layout_marginTop="7dp"

            android:layout_toRightOf="@id/imgProduct"
            android:textSize="16sp"
            android:layout_marginHorizontal="8dp" />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="1000$"
            android:layout_below="@id/tvQuantity"
            android:layout_toRightOf="@id/imgProduct"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status order"
            android:layout_marginTop="7dp"
            android:layout_below="@id/tvPrice"
            android:layout_toRightOf="@id/imgProduct"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/btnCancelOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            app:cardCornerRadius="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/ic_remove_cart" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>